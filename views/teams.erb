<div class="container">
	<div class="teams">
		<h2>Meet the Teams</h2>
		<hr style="width: 70%">
		<% if @teams.any?() %>
		<ul>
			<% @teams.each() do |team| %>
			<li style="font-size: 20px;"><a href="/team/<%= team.id()%>"><%= team.name() %></a> </li>
			<% end %>
		</ul>
		<% else %>
		<p>Sorry...There are no teams yet!</p>
		<!-- <a class="waves-effect waves-light btn" href="/teams/new">Add New Team</a> -->
		<% end %>

		<!--Form for Adding New Team-->
		<h3>Add New Team</h3>
		<form action="/teams" method="post">
			<div class="form-group">
				<div class="input-field">
					<i class="material-icons prefix">account_circle</i>
					<input name="name" id="icon_prefix name" type="text" class="validate form-control">
					<label for="icon_prefix">Team's Name</label>
					<button type="submit" class="btn btn-primary">Add Team</button>
				</div>
			</div>
		</form>
	</div>
</div>