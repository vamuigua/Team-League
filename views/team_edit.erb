<h1>Update <%=@team.name() %>'s details</h1>
<form action="/teams/<%= @team.id() %>" method="post">
  <div class="form-group">
    <div class="input-field">
      <input name="_method" type="hidden" value="patch">
      <i class="material-icons prefix">account_circle</i>
      <input name="name" id="icon_prefix name" type="text" class="validate form-control">
      <label for="icon_prefix">Team Name</label>
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
  </div>
</form>
<br>
<form action="/stylists/<%= @stylist.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="waves-effect waves-light btn red accent-4">Delete Team</button>
</form>